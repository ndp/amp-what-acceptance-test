  "description": "Acceptance Tests for amp-what.com, written in Gauge",
  "scripts": {
    "play": "yarn playwright test",
    "play:staging": "HOST=amp-what-staging.herokuapp.com yarn playwright test",
    "play:local": "HOST=localhost:5000 INSECURE=1 yarn playwright test",
    "test": "gauge run -c2 specs/*.md",
