    "test:localhost": "HOST=localhost:5000 INSECURE=1 gauge run -c2   specs/*.md"
  },
  "dependencies": {},
  "devDependencies": {
    "@getgauge/cli": "*",
    "@playwright/test": "*",
    "gauge": "*",
    "playwright": "*",
    "taiko": "*"
  }
}
